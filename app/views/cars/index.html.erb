<h1>Available Cars</h1>
<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= car.brand %></h5>
          <p class="card-text"><%= car.model %></p>
          <p class="card-text">Price - <%= car.price %>$</p>
          <p class="card-text">Address - <%= car.address %></p>
          <p class="card-text">Year - <%= car.year_of_production %></p>
          <%= link_to "Check it out", car_path(car.id) %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
